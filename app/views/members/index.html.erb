<h1 class="center">
  Members List
  <%= 'of ' + @department.name if @department %>
</h1>

<br />

<%= render 'members_list', members: @members %>

<br />

<% if signed_in_as_vice_president? %>
  <p class="center">
    <% if @department %>
      <%= link_to 'Create New Member', new_department_member_path(@department), class: 'btn btn-primary' %>
    <% else %>
      <%= link_to 'Create New Member', new_member_path, class: 'btn btn-primary center-block' %>
    <% end %>
  </p>
<% end %>

