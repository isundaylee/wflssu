<%= render('error_messages', errors: member.errors.full_messages) %>

<%= form_for(member, builder: MainFormBuilder, html: {class: 'form-regular'}) do |f| %>

  <%= f.collection_select :active, {true: t('models.member.active'), false: t('models.member.inactive')}, :first, :last %>
  <%= f.text_field :name, placeholder: t('.form_name_placeholder') %>
  <%= f.password_field :password, placeholder: t('.form_password_placeholder') %>
  <%= f.password_field :password_confirmation, placeholder: t('.form_password_confirmation_placeholder') %>
  <%= f.text_field :admission_year, placeholder: t('.form_admission_year_placeholder') %>
  <%= f.text_field :class_number, placeholder: t('.form_class_number_placeholder') %>
  <%= f.text_field :phone_number, placeholder: t('.form_phone_number_placeholder') %>
  <%= f.text_field :email, placeholder: t('.form_email_placeholder') %>
  <%= f.collection_select :gender, Hash[Member::GENDERS.collect { |v, s| [v, t('models.member.gender_' + s)] }], :first, :last %>
  <%= f.text_field :qq, placeholder: t('.form_qq_placeholder') %>
  <%= f.text_field :birthday, placeholder: t('.form_birthday_placeholder') %>
  <%= f.collection_select :department_id, Department.names, :first, :last %>
  <%= f.collection_select :privilege, Hash[Member::PRIVILEGES.collect { |v, s| [v, t('models.member.privilege_' + s)] }], :first, :last %>
  <%= f.text_field :secondary_school, placeholder: t('.form_secondary_school_placeholder') %>
  <%= f.text_field :code_number, placeholder: t('.form_code_number_placeholder') %>
  <%= f.text_area :memo, placeholder: t('.form_memo_placeholder'), rows: 10 %>

  <%= f.submit submit_text %>

<% end %>

