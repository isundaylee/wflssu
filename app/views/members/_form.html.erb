<%= render('error_messages', errors: member.errors.full_messages) %>

<%= form_for(member, builder: MainFormBuilder, html: {class: 'form-regular'}) do |f| %>

  <%= f.text_field :name, placeholder: 'Name. ' %>
  <%= f.password_field :password, placeholder: 'Password. ' %>
  <%= f.password_field :password_confirmation, placeholder: 'Password confirmation. ' %>
  <%= f.text_field :admission_year, placeholder: 'Admission year. ' %>
  <%= f.text_field :class_number, placeholder: 'Class number. ' %>
  <%= f.text_field :phone_number, placeholder: 'Phone number. ' %>
  <%= f.text_field :email, placeholder: 'Email address. ' %>
  <%= f.collection_select :gender, Member::GENDERS, :first, :last %>
  <%= f.text_field :qq, placeholder: 'QQ number. ' %>
  <%= f.text_field :birthday, placeholder: 'Birthday, DD/MM/YYYY. ' %>
  <%= f.collection_select :department_id, Department.names, :first, :last %>
  <%= f.text_field :secondary_school, placeholder: 'Secondary school name. ' %>
  <%= f.text_field :code_number, placeholder: 'Member code number. ' %>
  <%= f.text_area :memo, placeholder: 'Profile memo. ', rows: 10 %>

  <%= f.submit submit_text %>

<% end %>

