<!DOCTYPE html>
<html>
<head>
  <title>WFLS Student Union</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= "#{params[:controller]}_#{params[:action]}" %>">

  <div class="navbar navbar-inverse navbar-static-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'WFLSSU', root_path, class: 'brand' %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Departments', departments_path %></li>
              <li><%= link_to 'Members', members_path %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container" id="flashes-container">
    <% flash.each do |key, value| %>
      <% next unless ['success', 'warning', 'info', 'error'].include?(key.to_s) %>
      <div class="alert alert-<%= key.to_s %>">
        <%= value %>
      </div>
    <% end %>
  </div>

  <div class="container" id="main-container">
    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container">
      <p class="center"><small>Copyright &copy; 2012 Wuhan Foreign Languages School Student Union. All rights reserved. <small></p>
    </div>
  </footer>

  <div class="container">
    <%= debug(params) %>
  </div>

</body>
</html>
